{% extends 'base.html.twig' %}

{% block title %}Reservation index{% endblock %}

{% block body %}
    <h1>Reservation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Reference</th>
                <th>TotalPrice</th>
                <th>TicketType</th>
                <th>RestaurantTime</th>
                <th>Parking</th>
                <th>Cancel</th>
                <th>Seats</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.reference }}</td>
                <td>{{ reservation.totalPrice }}</td>
                <td>{{ reservation.ticketType }}</td>
                <td>{{ reservation.restaurantTime ? reservation.restaurantTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reservation.parking ? 'Yes' : 'No' }}</td>
                <td>{{ reservation.cancel ? 'Yes' : 'No' }}</td>
                <td>{{ reservation.seats }}</td>
                <td>
                    <a href="{{ path('reservation_show', {'id': reservation.id}) }}">show</a>
                    <a href="{{ path('reservation_edit', {'id': reservation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('reservation_new') }}">Create new</a>
{% endblock %}
