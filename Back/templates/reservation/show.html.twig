{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ reservation.reference }}</td>
            </tr>
            <tr>
                <th>TotalPrice</th>
                <td>{{ reservation.totalPrice }}</td>
            </tr>
            <tr>
                <th>TicketType</th>
                <td>{{ reservation.ticketType }}</td>
            </tr>
            <tr>
                <th>RestaurantTime</th>
                <td>{{ reservation.restaurantTime ? reservation.restaurantTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Parking</th>
                <td>{{ reservation.parking ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Cancel</th>
                <td>{{ reservation.cancel ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Seats</th>
                <td>{{ reservation.seats }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('reservation_index') }}">back to list</a>

    <a href="{{ path('reservation_edit', {'id': reservation.id}) }}">edit</a>

    {{ include('reservation/_delete_form.html.twig') }}
{% endblock %}
